<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainTheme"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TaskTwoActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LengthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Summary length:"
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/LengthResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SurfaceAreaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Summary surface area:"
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/SurfaceAreaResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/CTaskLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C. figure number:"
        android:textColor="@color/text_color"
        android:textIsSelectable="false"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LineLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lines:"
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/LineCountResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CircleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circles:"
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/CiercleCountResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/RectangleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lines:"
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/RectangleCountResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textIsSelectable="false"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>